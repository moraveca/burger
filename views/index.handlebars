<div class="container" id="header">
    <div class="row">
        <div class="col">
            <h1 class="text-center">Burgers!</h1>
            <hr>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm">

            <h2 class="text-center">Some burgers to eat...</h2>

            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    <p><span class="label">{{this.id}}:</span> {{this.burger_name}}</p>
                    {{!-- <p><span class="label">ID:</span> {{this.id}}</p> --}}
                    <button type="button" class="btn devour" data-id="{{this.id}}">Devour it!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-sm">

            <h2 class="text-center">Add a Burger</h2>
            <form class="create-form text-center">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="bn" name="name">
                </div>

                <button class="btn" type="submit">Add Burger</button>
            </form>
        </div>

        <div class="col-sm">

            <h2 class="text-center">Burgers that have been eaten...</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p><span class="label">{{this.id}}:</span> {{this.burger_name}}</p>
                    {{!-- <p><span class="label">ID:</span> {{this.id}}</p> --}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>